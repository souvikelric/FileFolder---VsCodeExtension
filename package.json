{
  "name": "fileandfoldercounter",
  "displayName": "FileAndFolderCounter",
  "description": "counts the number of files and folders in the current open vs code folder",
  "publisher": "Souvik",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.97.0"
  },
  "icon": "icon1.png",
  "categories": [
    "Other"
  ],
  "repository": {
    "url": "https://github.com/souvikelric/FileFolder---VsCodeExtension"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "settingObject",
      "properties": {
        "fileandfoldercounter.color": {
          "type": "string",
          "default": "#cf59f9"
        },
        "fileandfoldercounter.githubIncluded": {
          "type": "boolean",
          "default": "false"
        },
        "fileandfoldercounter.nodeModulesIncluded": {
          "type": "boolean",
          "default": "false"
        },
        "fileandfoldercounter.showSizeOnDisk": {
          "type": "boolean",
          "default": "false"
        }
      }
    },
    "commands": [
      {
        "command": "fileandfoldercounter.fileFolderCount",
        "title": "Count Files and Folders"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
